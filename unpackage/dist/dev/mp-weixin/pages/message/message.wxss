page {
  background: #efeff4;
}
._img,
image {
  width: 100%;
  height: 100%;
  display: block;
}
.display-between-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.fix-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 20rpx 0 40rpx;
}
.back-btn-color {
  background: -webkit-linear-gradient(left, #ffa929, #ff831f);
  background: linear-gradient(left, #ffa929, #ff831f);
}
.bootom-l-btn {
  background: -webkit-linear-gradient(left, #ffa929, #ff831f);
  background: linear-gradient(left, #ffa929, #ff831f);
  width: 600rpx;
  margin: 60rpx auto;
  box-sizing: border-box;
  height: 96rpx;
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 96rpx;
  box-shadow: 0 4rpx 16rpx 0rpx #ff9b1f;
}
#message {
  padding: 0 34rpx 100rpx;
}
#message .message-item {
  padding: 44rpx 0 0 0;
}
#message .msg-time-title {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-bottom: 20rpx;
}
#message .msg-arti-content {
  background: #fff;
  border-radius: 15rpx;
  padding: 32rpx 40rpx 0;
}
#message .msg-title {
  margin-bottom: 16rpx;
  font-size: 36rpx;
  /* font-weight: bold; */
  line-height: 56rpx;
  letter-spacing: 2rpx;
}
#message .tag {
  padding: 0rpx 16rpx;
  margin-right: 20rpx;
  border-radius: 22rpx;
  font-size: 24rpx;
  background: rgba(255, 214, 55, 0.3);
  color: #f26f18;
  font-weight: normal;
  letter-spacing: normal;
}
#message .msg-describes {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 38rpx;
}
#message .article-img {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
#message .msg-right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 22rpx;
  color: #888;
}
#message .right-text-num {
  color: #f26f18;
}
#message .right-padding-r {
  padding-right: 10rpx;
  letter-spacing: normal;
}
#message .go-detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 28rpx 0;
  width: 100%;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 2rpx;
}
#message .go-detail-img {
  width: 32rpx;
  height: 32rpx;
}
#message .height30 {
  height: 60rpx;
}

